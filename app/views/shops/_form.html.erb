<%= form_with(model: shop, html: {class: 'form-horizontal', role: 'form'}) do |form| %>
  <% if shop.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(shop.errors.count, "error") %> prohibited this shop from being saved:</h2>

      <ul>
        <% shop.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='form-group'>
    <%= form.label :category_id, class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <%= form.select :category_id, Category.all.map{|o| [o.name, o.id]} %>
    </div>
  </div>

  <div class='form-group'>
    <%= form.label :name, class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <%= form.text_field :name %>
    </div>
  </div>

  <div class='form-group'>
    <%= form.label :address, class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <%= form.text_field :address %>
    </div>
  </div>

  <div class='actions'>
    <div class='form-group'>
      <div class='col-sm-offset-2 col-sm-10'>
        <%= form.submit 'Submit', class: 'btn btn-success' %>
        <%= link_to 'Back', :back, class: 'btn btn-default' %>
      </div>
    </div>
  </div>
<% end %>
