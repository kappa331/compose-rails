<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Category ID</th>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.id, category, class: 'widelink' %></td>
        <td><%= link_to category.name, category, class: 'widelink' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Category', new_category_path, class: 'btn btn-primary' %> <%= link_to 'Show Shops', shops_path, class: 'btn btn-info' %>

